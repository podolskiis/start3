doctype html
include _variables.pug
include ../_mixins/_mix-include.pug

html(lang="zxx")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width")
    meta(name="format-detection" content="telephone=no")
    meta(name="format-detection" content="address=no")
    
    block title
      title=pojectTitle
    
    meta(name="description" content="")
    meta(name="keywords" content="")
    meta(property='og:url' content="")
    meta(property='og:type' content="")
    meta(property='og:title' content="")
    meta(property='og:description' content="")
    meta(property='og:image' content="")

    +favicon
    +icomoon
    link(href="css/vendor.min.css?rev=@@hash" rel="stylesheet")
    link(href="css/app.min.css?rev=@@hash" rel="stylesheet")
    link(href="css/custom.css" rel="stylesheet")

  body.page(class=bodyClasses)
    if before
      // before: START 
      include ../_section/_static/_before.pug
      // before: END 
    .page-wrap
      if header
        // HEADER: START 
        include ../_section/_static/_header.pug
        // HEADER: END 
      if main
        // MAIN: START 
        main.main
          block content
        // MAIN: END 
      if footer
        // FOOTER: START 
        include ../_section/_static/_footer.pug
        // FOOTER: END 
    if modals
      // MODALS: START 
      include ../_section/_static/_modals.pug
      // MODALS: END 
    script(src=`${cdnjs}/jquery/3.4.1/jquery.min.js`)
    script(src="js/vendor.min.js?rev=@@hash")
    block script
    script(src="js/app.js?rev=@@hash")
