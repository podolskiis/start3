extends _base/_main.pug
block vars
  - title = ['О компании']
  - header = 1
  - footer = 1
  - modals = 1
block content
  .section
    .container
      .mb-3
        +b-breadcrumb(['Главная','Категория','Заголовок статьи']).hide-lg-max
      .mb-3
        h1.m-0
          | Title
          a(href="#")
      .mb-3
        p
          a(data-fancybox href="https://source.unsplash.com/IvfoDk30JnI/1500x1000")
            <img src="https://source.unsplash.com/IvfoDk30JnI/240x160" />
        p
          a(href="#", data-toggle="modal" data-target='#modal-inform')
            | open modal
        - for (var x = 1; x <= 2; x++)
          +p
    .container
      form(action="")
        .form-group
          .form-field.form-field--tm-1.form-field-icon
            input(name="" type='text' size='30' placeholder='search' required).form-field
            .form-field-icon__icon.order-1
              button(type="button").bt
                i.fas.fa-search
        .form-group
          label.form-label
            | Ваше имя
          input(name="" type="text" placeholder="Ваше имя" required).form-field.form-field--tm-1
        .form-group
          input(name="" type="email" placeholder="Ваш e-mail" required).form-field.form-field--tm-1
        .form-group
          input(name="" type="tel" placeholder="Ваш телефон" required).form-field.form-field--tm-1.w-100
        .form-group
          textarea(name="" rows="5" placeholder="Сообщение" required).form-field.form-field--tm-1.w-100
        .form-group.form-group--bt
          button(type="submit").bt.bt--default submit
