doctype html
include _variables.pug
include ../_mixins/_mix-include.pug

html(lang="zxx")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="format-detection" content="telephone=no")
    meta(name="format-detection" content="address=no")

    block title
      title=pojectTitle
    meta(name="description", content="Описание содержимого страницы")
    meta(name="keywords", content="ключевые слова, через запятую")

    +favicon
    +icomoon

    link(href=`${cdnjs}font-awesome/6.0.0-beta2/css/all.min.css` rel="stylesheet")
    link(href=`${assets}css/vendor.min.css?rev=@@hash` rel="stylesheet")
    link(href=`${assets}css/theme.min.css?rev=@@hash` rel="stylesheet")
    link(href=`${assets}css/custom.css` rel="stylesheet")

  body.page(class=bodyClasses)
    if before
      include ../_section/_static/_before.pug
    .page-wrap
      if header
        // HEADER: START 
        include ../_section/_static/_header.pug
        // HEADER: END 
      if main
        // MAIN: START 
        main.section-main
          block content
        // MAIN: END 
      if footer
        // FOOTER: START 
        include ../_section/_static/_footer.pug
        // FOOTER: END 
    if modals
      // MODALS: START 
      include ../_section/_static/_modals.pug
      // MODALS: END 

    script(src=`${cdnjs}/jquery/3.6.0/jquery.min.js`)
    script(src=`${assets}js/vendor.min.js?rev=@@hash`)
    block script
    script(src=`${assets}js/theme.js?rev=@@hash`)
