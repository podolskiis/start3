mixin modal-bs-close
  span.bt(data-bs-dismiss="modal")&attributes(attributes)
    <i class="fas fa-times"></i>
mixin modal-bs
  .modal.fade(tabindex="-1" role="dialog")&attributes(attributes)
    block
mixin b-logo(img,ht)
  .b-logo&attributes(attributes)
    a.b-logo__link(href="/")
      img.b-logo__img(src=`images/theme/${img}` height=ht alt)
      //- span.b-logo__title= poject
mixin b-check(mod)
  label.b-check(class=mod)
    span.b-check__row
      span.b-check__col
        span.b-check__field
          input(type="checkbox" required).b-check__input&attributes(attributes)
          span.b-check__checked
      span.b-check__col
        span.b-check__val
          block
mixin b-select
  select()&attributes(attributes)
    //- option(value) label
    - for (var x = 1; x <= 5; x++)
      option(value=`val-${x}`)!=`Lorem option #${x}`